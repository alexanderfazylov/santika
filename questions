url formatt:


каталог: /catalog
для линии: /catalog/{наименование линии}
для товаров линии: /catalog/line/{наименование линии}
для коллекции: /catalog/collection/{наименование коллекции}
для категории: /catalog/{наименование линии}/{наименование категории}
для товара: /catalog/{наименование линии}/{наименование категории (если есть)}/{наименование товара}
            /catalog/{наименование линии}/product/{наименование товара}


